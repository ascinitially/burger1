<h1 style = "text-align:center">Eat Da Burger!</h1>

<h2>Burgers to eat!</h2>

<div class="row">
  <div class="col-md-4">
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>


  <div class="col-md-4">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>

  <div class="col-md-4">
    <h2>Burgers eaten!</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block2 devoured=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>

</div>

